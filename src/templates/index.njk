{% extends '../layout/default.njk' %}

{% block body %}
  <main>
    {%- component 'header-promo', flyer -%}

    <div class="page-item">
      <div class="constrain-m">
        {%- component 'entry', zonderdagen -%}
      </div>

      <div class="section-item">
        {%- component 'clip' -%}
      </div>

      <div class="constrain-max">
        {%- component 'entry', album -%}
      </div>
    </div>

    <div class="page-item">
      {%- component 'music-player' -%}
    </div>

    <div class="page-item">
      <div class="constrain-m">
        <h2>{{ band.title }}</h2>
        {%- component 'definition-list', band.members -%}
      </div>
    </div>

    <div class="area-colored">
      <div class="section-item">
        {%- component 'contact' -%}
      </div>
    </div>
  </main>
{% endblock %}
